<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <LinearLayout
        android:id="@+id/table_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <View
            style="@style/MyTextLine"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            />

        <TextView
            android:id="@+id/client_id"
            style="@style/MyTableContent"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center"
            />

        <View
            style="@style/MyTextLine"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            />

        <RelativeLayout
            android:id="@+id/cline_layout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/content_padding_small"
            android:layout_marginTop="@dimen/content_padding_small"
            android:layout_weight="8"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/client_name"
                style="@style/MyTableContent"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="@dimen/content_margin_ssmall"
                android:gravity="center"
                />

            <TextView
                android:id="@+id/client_code"
                style="@style/MyTableContent"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/content_margin_ssmall"
                android:layout_toRightOf="@id/client_name"
                android:gravity="center"
                />
        </RelativeLayout>
        <!--<TextView-->
        <!--android:id="@+id/client_name"-->
        <!--style="@style/MyTableContent"-->
        <!--android:layout_width="0dp"-->
        <!--android:layout_height="match_parent"-->
        <!--android:layout_weight="8"-->
        <!--android:gravity="center"-->
        <!--/>-->

        <View
            style="@style/MyTextLine"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            />

        <TextView
            android:id="@+id/order_amount"
            style="@style/MyTableContent"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:gravity="center"

            />

        <View
            style="@style/MyTextLine"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            />

        <TextView
            android:id="@+id/order_money"
            style="@style/MyTableContent"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="6"
            android:gravity="center"
            />

        <View
            style="@style/MyTextLine"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            />
    </LinearLayout>

    <View
        android:id="@+id/table_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/silver"/>
</LinearLayout>