                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/content_padding_normal"
                    />
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/silver"/>
